<!doctype html>
@model LuxuryEstate.Web.ViewModels.SignUpInputModel
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Account</title>
    <link href='~/Users/css/LoginMain.css' rel='stylesheet'>
</head>
<body oncontextmenu='return false' class='snippet-body'>
    <div class="row">
        <div class="col-md-6 mx-auto p-0">
            <div class="card">
                <div class="login-box">
                    <div class="login-snip">
                        <div class="hr"></div>
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                        <div class="login-space">
                            <div class="login">
                                <form method="post">
                                    <div class="group"> <label asp-for="Username"></label> <input asp-for="Username" class="input" placeholder="Enter your username"></div>
                                    <span asp-validation-for="Username" class="color-b"></span>
                                    <div class="group"> <label asp-for="Password"></label> <input asp-for="Password" class="input" type="password" placeholder="Enter your password"> </div>
                                    <span asp-validation-for="Password" class="color-b"></span>
                                    <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                                    <div class="group"> <input type="submit" class="button" value="Sign In"></div>
                                </form>
                                <div class="hr"></div>
                            </div>
                            <div class="sign-up-form">
                                <form method="post">
                                    <div class="group"> <label asp-for="Username"></label> <input asp-for="Username" class="input" placeholder="Create your Username"> </div>
                                    <span asp-validation-for="Username" class="color-b"></span>
                                    <div class="group"> <label asp-for="Password"></label> <input asp-for="Password" class="input" type="password" placeholder="Create your password"> </div>
                                    <span asp-validation-for="Password" class="color-b"></span>
                                    <div class="group"> <label asp-for="RepeatPassword"></label> <input asp-for="RepeatPassword" class="input" type="password" placeholder="Repeat your password"> </div>
                                    <span asp-validation-for="RepeatPassword" class="color-b"></span>
                                    <div class="group"> <label asp-for="Email"></label> <input asp-for="Email" class="input" placeholder="Enter your email address"> </div>
                                    <span asp-validation-for="Email" class="color-b"></span>
                                    <div class="group"> <input type="submit" class="button" value="Sign Up"></div>
                                </form>
                                <div class="hr"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>